<%= form_for user, url: update_role_admin_user_path(user), method: :put, :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
  <% Role.all.each do |role| %>
    <div class='form-group'>
      <label class='col-lg-offset-1 col-lg-3'>
        <%= radio_button_tag 'user[role_id]', role.id, user.roles.include?(role) %>
        &nbsp;
        <%= h(role.name.capitalize) %>
      </label>
    </div>
  <% end %>
  <div class='form-group'>
    <div class='col-lg-offset-3 col-lg-9'>
      <%= f.submit "Change Role", :class => "btn btn-primary in-modal-footer" %>
    </div>
  </div>
<% end %>
