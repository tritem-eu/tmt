<div class="row">
  <div class="col-lg-6">
    <%= form_for(@user, url: url, as: :user, html: {class: "form-horizontal"}) do |f| %>
      <div class='form-group required'>
        <div class='control-label col-lg-4'>
          <%= f.label :email %>
        </div>
        <div class='controls col-lg-8'>
          <% if user.id %>
            <%= f.email_field :email, class: "form-control", disabled: :disabled %>
          <% else %>
            <%= f.email_field :email, class: "form-control" %>
          <% end %>
        </div>
      </div>

      <div class='form-group required'>
        <div class='control-label col-lg-4'>
          <%= f.label :name %>
        </div>
        <div class='controls col-lg-8'>
          <%= f.text_field :name, :autofocus => true, class: "form-control js-input-down-counter-#{Tmt::Cfg.max_name_length}" %>
        </div>
      </div>

      <div class='form-group required'>
        <div class='control-label col-lg-4'>
          <%= f.label :is_machine %>
        </div>
        <div class='controls col-lg-8'>
          <%= f.check_box :is_machine, {class: "form-control switch-small"} %>
        </div>
      </div>

      <% if user.id %>
        <div class='form-group'>
          <div class='control-label col-lg-4'>
            <%= f.label :switch_password, t(:update_password, scope: :users) %><br />
          </div>
          <div class='control col-lg-8'>
            <%= f.check_box :switch_password, {class: "form-control switch-small"}, true, false %>
          </div>
        </div>
      <% end %>

      <div class='form-group js-user-password required'>
        <div class='control-label col-lg-4'>
          <%= f.label :password %>
        </div>
        <div class='controls col-lg-8'>
          <%= f.password_field :password, {class: "form-control"}%>
        </div>
      </div>

      <div class='form-group js-user-password required'>
        <div class='control-label col-lg-4'>
          <%= f.label :password_confirmation %>
        </div>
        <div class='controls col-lg-8'>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

      <div class='form-group'>
        <div class="col-lg-offset-4 col-lg-3 controls">
          <%= button_submit_for(f, @user, class: 'btn-block only-one-click') %>
        </div>
      </div>
    <% end %>
</div>
