<%= form_for(machine, url: url, as: :machine, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group required">
    <label class='col-lg-3'>
      <%= t(:user_name, scope: :machines) %>
    </label>
    <div class='controls col-lg-9'>
      <%= link_to h(@user.name), [@user], {target: '_blank'} %>
      <%= f.hidden_field :user_id %>
    </div>
  </div>

  <div class="form-group required">
    <label class='col-lg-3'>
      <%= t(:hostname, scope: :machines) %>
    </label>
    <div class='controls col-lg-9'>
      <%= f.text_field :hostname, class: "form-control", placeholder: t(:hostname, scope: :machines) %>
    </div>
  </div>

  <div class="form-group required">
    <label class='col-lg-3'>
      <%= t(:fully_qualified_domain_name, scope: :machines) %>
    </label>
    <div class='controls col-lg-9'>
      <%= f.text_field :fully_qualified_domain_name, class: "form-control", placeholder: t(:fully_qualified_domain_name, scope: :machines) %>
    </div>
  </div>

  <div class="form-group required">
    <label class='col-lg-3'>
      <%= t(:ip_address, scope: :machines) %>
    </label>
    <div class='controls col-lg-9'>
      <%= f.text_field :ip_address, class: "form-control", placeholder: t(:ip_address, scope: :machines) %>
    </div>
  </div>

  <div class="form-group required">
    <label class='col-lg-3'>
      <%= t(:mac_address, scope: :machines) %>
    </label>
    <div class='controls col-lg-9'>
      <%= f.text_field :mac_address, class: "form-control", placeholder: t(:mac_address, scope: :machines) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-9 controls">
      <%= button_submit_for(f, machine, class: 'only-one-click') %>
    </div>
  </div>
<% end %>
