<%= form_for(campaign, url: url, as: :campaign, remote: true, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.hidden_field :project_id %>
  <div class="form-group required">
    <%= f.label :name, t(:name, scope: :campaigns), class: 'control-label col-lg-3' %>
    <div class="col-lg-9">
      <%= f.text_field :name, placeholder: t(:name, scope: :campaigns), class: "form-control js-input-down-counter-#{Tmt::Cfg.max_name_length}" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-lg-3"><%= t(:deadline, scope: :campaigns) %></label>
    <div class="col-lg-9">
      <%= add_datetime({f: f, name: :deadline_at, value: campaign.deadline_at})%>
    </div>
  </div>
  <div class="form-group">
    <div class='col-lg-offset-3 col-lg-9'>
      <%= button_submit_for(f, campaign, class: 'only-one-click') %>
    </div>
  </div>
<% end %>
