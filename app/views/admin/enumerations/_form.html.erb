<div class='height-separator'></div>
<%= form_for [:admin, enumeration], as: :enumeration, html: {class: 'form-horizontal'}, remote: is_remote do |f| %>
  <div class="form-group required">
    <label class="control-label col-lg-3"><%= t(:name, scope: :enumerations) %></label>
    <div class="col-lg-9">
      <%= f.text_field :name, class: "form-control js-input-down-counter-#{Tmt::Cfg.max_name_length}" %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-lg-offset-3 col-lg-9'>
      <%= button_submit_for(f, enumeration, class: 'only-one-click') %>
    </div>
  </div>
<% end %>
