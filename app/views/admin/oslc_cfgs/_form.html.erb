<%= form_for cfg, url: url, as: :oslc_cfg, :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :test_case_type_id, :class => 'col-lg-3 control-label' %>
    <div class='controls col-lg-9'>
      <%= f.select :test_case_type_id, options_of_select(Tmt::TestCaseType.all, :id, :name, cfg.test_case_type_id), {}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class='col-lg-offset-3 col-lg-9 controls'>
      <%= button_submit_for(f, cfg, class: 'only-one-click') %>
    </div>
  </div>
<% end %>
