<table class='page-header'>
  <tr>
    <td class='page-header-title'>
      <h2>
        <div style='float: left;'><%= title %></div>
        <div class='crop page-header-subject', title='<%= attributes[:subject] %>' >
          <%= attributes[:subject] %>
          <%= attributes[:subject_after] %>
        </div>
      </h2>
    </td>
    <td class="page-header-attributes" rowspan='2'>
      <% if attributes[:right_side] %>
        <div class="pull-right">
          <%= attributes[:right_side].html_safe %>
        </div>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <% if attributes[:subheader] %>
        <p>
          <%= attributes[:subheader].html_safe %>
        </p>
      <% end %>
    </td>
  </tr>
</table>
