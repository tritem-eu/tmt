<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : Tmt::Cfg.first.instance_name %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "TMT" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>

  <body class="<%= spinal_case(controller_name).gsub("tmt-", "") %> <%= spinal_case(action_name) %>">
    <div id="wrapper">
      <div id="page-wrapper">
        <div class="container">
          <div class="row">
            <%= render 'layouts/messages' %>
            <%= yield %>
          </div><!-- /.row -->
        </div>
      </div><!-- /#page-wrapper -->
    </div><!-- /#wrapper -->
  </body>
</html>
