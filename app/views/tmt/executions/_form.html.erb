<%= form_for(execution, url: url, method: :put, as: :execution, remote: true, html: {class: 'edit_execution form-horizontal'}) do |f| %>
  <h3><%= t(:execution_result, scope: :executions) %></h3>
  <div class="form-group">
    <%= f.label :comment, class: 'col-lg-3 control-label' %>
    <div class="col-lg-9">
      <%= f.text_area :comment, class: "form-control no-resize-vertical" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :datafiles, class: 'control-label col-lg-3' %>
    <div class="col-lg-9">
      <%= f.file_field :datafiles, multiple: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: 'control-label col-lg-3' %>
    <div class="col-lg-9">
      <%= f.select :status, options_for_select(Tmt::Execution.statuses.map {|item| [item, item]}, execution.status),{include_blank: false}, class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :progress, class: 'control-label col-lg-3' %>
    <div class="col-lg-9">
      <%= f.number_field :progress, class: "form-control", :in => 0..100, :precision => 2%>
    </div>
  </div>

  <div class='form-group'>
    <div class="col-lg-offset-3 col-lg-9">
      <%= f.submit t(:set_result, scope: :executions), class: "btn btn-info only-one-click" %>
    </div>
  </div>
<% end %>
