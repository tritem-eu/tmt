<%= form_for(version, url: url, as: :test_case_version, remote: true) do |f| %>
  <%= f.hidden_field :test_case_id %>
  <div class="form-group">
    <label class="control-label">
      <%= t(:datafile, scope: :test_case_versions) %>
    </label>
    <div class="controls">
      <%= f.file_field :datafile, accept: ".#{version.test_case.type.extension}" || "*" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label">
      <%= t(:comment, scope: :test_case_versions) %>
    </label>
    <div class="controls">
      <%= f.text_field :comment, class: "form-control" %>
      <div class='hidden'><%= t(:uploaded_file, scope: :test_case_versions) %></div>
    </div>
  </div>
  <div class="form-group">
    <div class="controls pagination-centered">
      <div class="pull-right">
        <% if version.id %>
          <%= f.submit t(:create, scope: :test_case_versions), class: "btn btn-primary" %>
        <% else %>
          <%= f.submit t(:upload, scope: :test_case_versions), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
